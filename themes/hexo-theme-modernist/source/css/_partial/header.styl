#header
  border-radius 8px 8px 0 0
  //background #C6EAFA linear-gradient(#ddfbfc, #c6eafa)
  background #000
  position relative
  padding 15px 30px
  box-sizing:border-box
  border-bottom 1px solid #B2D2E1
  min-height:60px;


  #canvas-bg
    border-radius 8px 8px 0 0;
    overflow:hidden;
    position: absolute;
    width:100%;
    height:100%;
    top:0;
    left:0;
    z-index:1;

  .header-main
    box-sizing: border-box;
    position:relative;
    width:100%;
    height:100%;
    top:0;
    left:0;
    //padding 15px 30px
    z-index:2;

    .title
      float left
    .nav
      float right
      font-size 0.875em
      font-family font-title
      line-height 2.5em
      ul
        list-style none
        li
          float left
          margin-left 26px
          a
            color #fff
    h1
      margin 0
      padding 0
      font-size 1.5em
      font-weight normal
      line-height 1.2
      color #fff
      // text-shadow rgba(255, 255, 255, 0.9) 0 1px 0
      a
        color #fff

  &.without-description h1
    margin 10px 0

   p
    margin 0
    color #61778B
    width 300px
    font-size 0.8125em
    font-style italic
    a
       color #fff
