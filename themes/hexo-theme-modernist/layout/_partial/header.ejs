<header id="header">
  <div id="canvas-bg"></div>
  <div class="header-main">
    <div class="title">
      <h1><a href="<%- config.root %>"><%= config.title %></a></h1>
      <p><a href="<%- config.root %>"><% if (config.subtitle){ %><%= config.subtitle %><% } %></a></p>
    </div>
    <nav class="nav">
      <ul>
        <% for (var i in theme.menu){ %>
          <li><a href="<%- theme.menu[i] %>"><%= i %></a></li>
        <% } %>
        <% if (theme.rss) { %>
          <li><a href="<%- theme.rss %>"><%- __('rss_title') %></a></li>
        <% } %>
      </ul>
      <div class="clearfix"></div>
    </nav>
  </div>
  <div class="clearfix"></div>
</header>
